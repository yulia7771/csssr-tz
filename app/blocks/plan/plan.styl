.plan
	display inline-block
	word-spacing normal

	&__radio
		display none

	&__name
		padding-left 47px
		font-size 20px
		font-weight bold
		line-height 45px
		background url(../images/not-check-plan.png) no-repeat 0 center

	&__radio:checked + .plan__name
		background url(../images/check-plan.png) no-repeat 0 center
